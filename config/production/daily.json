{
    "pulse": {
        "applabel": "qa-auto@mozilla.com|mozmill_daily",
        "routing_key_regex": "build\\..+(-l10n)?-nightly\\.\\d+\\.finished",
        "platforms": [
            "linux",
            "linux64",
            "macosx",
            "macosx64",
            "win32"
        ],
        "branches": [
            "mozilla-central",
            "mozilla-aurora",
            "mozilla-esr10"
        ],
        "products": [
            "firefox"
        ],
        "locales": [
            "en-US",
            "fr"
        ]
    },
    "jenkins": {
        "url": "http://localhost:8080",
        "username": "mozilla",
        "password": "test1234"
    },
    "testrun": {
        "jenkins_parameter_map": {
            "default": {
                "BUILD_ID": {
                    "key": "buildid"
                },
                "BUILD_TYPE": {
                    "value": "daily"
                },
                "LOCALE": {
                    "key": "locale",
                    "default": "en-US"
                },
                "PLATFORM": {
                    "key": "platform",
                    "transform": "get_platform_identifier"
                },
                "REPORT_URL": {
                    "value": "http://mozauto.iriscouch.com/mozmill-ci/"
                }
            },
            "endurance": {
                "ENTITIES": {
                    "value": 10
                },
                "ITERATIONS": {
                    "value": 10
                }
            },
            "update": {
                "BUILD_ID": {
                    "key": "previous_buildid"
                },
                "TARGET_BUILD_ID": {
                    "key": "buildid"
                }
            }
        },
        "by_branch": {
            "mozilla-central": {
                "testruns": [
                    "update",
                    "functional",
                    "endurance",
                    "remote",
                    "addons"
                ],
                "platforms": {
                    "mac": [
                        "mac && 10.6 && 64bit",
                        "mac && 10.7 && 64bit",
                        "mac && 10.8 && 64bit"
                    ],
                    "win32": [
                        "windows && xp && 32bit",
                        "windows && vista && 32bit",
                        "windows && 7 && 32bit",
                        "windows && 7 && 64bit",
                        "windows && 8 && 32bit",
                        "windows && 8 && 64bit"
                    ],
                    "linux": [
                        "linux && ubuntu && 32bit"
                    ],
                    "linux64": [
                        "linux && ubuntu && 64bit"
                    ]
                }
            },
            "mozilla-aurora": {
                "testruns": [
                    "update",
                    "functional",
                    "endurance",
                    "remote",
                    "addons"
                ],
                "platforms": {
                    "mac": [
                        "mac && 10.6 && 64bit",
                        "mac && 10.7 && 64bit",
                        "mac && 10.8 && 64bit"
                    ],
                    "win32": [
                        "windows && xp && 32bit",
                        "windows && vista && 32bit",
                        "windows && 7 && 32bit",
                        "windows && 7 && 64bit",
                        "windows && 8 && 32bit",
                        "windows && 8 && 64bit"
                    ],
                    "linux": [
                        "linux && ubuntu && 32bit"
                    ],
                    "linux64": [
                        "linux && ubuntu && 64bit"
                    ]
                }
            },
            "mozilla-esr10": {
                "testruns": [
                    "update",
                    "functional",
                    "endurance",
                    "remote",
                    "addons"
                ],
                "platforms": {
                    "mac": [
                        "mac && 10.6 && 64bit",
                        "mac && 10.7 && 64bit",
                        "mac && 10.8 && 64bit"
                    ],
                    "win32": [
                        "windows && 2000 && 32bit",
                        "windows && xp && 32bit",
                        "windows && vista && 32bit",
                        "windows && 7 && 32bit",
                        "windows && 7 && 64bit",
                        "windows && 8 && 32bit",
                        "windows && 8 && 64bit"
                    ],
                    "linux": [
                        "linux && ubuntu && 32bit"
                    ],
                    "linux64": [
                        "linux && ubuntu && 64bit"
                    ]
                }
            }
        }
    }
}
